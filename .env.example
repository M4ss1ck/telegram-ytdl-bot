# Telegram Bot Configuration
API_ID=your_telegram_api_id
API_HASH=your_telegram_api_hash
BOT_TOKEN=your_telegram_bot_token

# Download Settings
DOWNLOAD_TIMEOUT=600
MAX_FILE_SIZE=2000000000  # ~1.9GB, Telegram limit is 2GB

# Group file size limit (default 500MB)
# GROUP_MAX_FILE_SIZE=524288000

# Cookie file path (optional)
# Provide the absolute path to a Netscape-formatted cookies.txt file
# COOKIE_FILE_PATH=/path/to/your/cookies.txt

# Spotify Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
